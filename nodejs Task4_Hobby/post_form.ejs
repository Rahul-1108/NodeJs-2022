    <body>
      <form action = "http://localhost:4000/process_post" method = "POST"  data-parsley-validate="" enctype="multipart/form-data">

        <section class="h-100 h-custom" style="background-color: #8fc4b7;">
            <div class="container py-5 h-100">
              <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-8 col-xl-6">
                  <div class="card rounded-3">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img3.webp"
                      class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
                      alt="Sample photo">
                    <div class="card-body p-4 p-md-5">
                      <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Form</h3>
          
                      <form class="px-md-2">
                      <form action = "http://localhost:5000/process_post" method = "POST"  data-parsley-validate="" enctype="multipart/form-data">

          
                        <div class="form-outline mb-4">
                          <label class="form-label" for="form3Example1q">First Name</label>
                          <input type="text" name = "first_name" data-parsley-required  id="form3Example1q" class="form-control" />
                          <% if(locals.errors && locals.errors.first_name){ %>
                          <div class="error"><%= errors.first_name[0] %></div>
                          <% } %>
                          </div>
                        

                        <div class="form-outline mb-4">
                          <label class="form-label" for="form3Example1q">Last Name</label>
                          <input type="text" id="form3Example1q" class="form-control" name = "last_name"  data-parsley-required />
                          <% if(locals.errors && locals.errors.last_name){ %>
                            <div class="error"><%= errors.last_name[0] %></div>
                        <% } %>
                        </div>
           
                      
                        <div class="form-outline mb-4">
                          <label class="form-label" for="form3Example1q">Email id</label>
                          <input type="text" id="form3Example1q" class="form-control" name = "email"  data-parsley-required data-parsley-type="email" />
                          <% if(locals.errors && locals.errors.email){ %>
                            <div class="error"><%= errors.email[0] %></div>
                        <% } %>
                        </div>

                        <div class="form-outline mb-4">
                          <label class="form-label">Password</label>
                          <input type="password"  class="form-control" name = "password"  data-parsley-required data-parsley-type="password" />
                          <% if(locals.errors && locals.errors.password){ %>
                            <div class="error"><%= errors.password[0] %></div>
                        <% } %>
                        </div>
          

                        <div class="form-outline mb-4">
                          <label class="form-label" for="form3Example1q">Phone No</label>
                          <input type="text" id="form3Example1q" class="form-control" name = "phone"  data-parsley-required data-parsley-type="phone" />
                          <% if(locals.errors && locals.errors.phone){ %>
                            <div class="error"><%= errors.phone[0] %></div>
                        <% } %>
            
                        </div>
                        
                       
                          
                        
                        <div class="input-group">
                        <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                    
                        </div>
                        <div class="custom-file">
                        <input type="file" name = "file" size="50" class="custom-file-input" id="inputGroupFile01"
                        aria-describedby="inputGroupFileAddon01">
                        <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                        <% if(locals.errors && locals.errors.file){ %>
                          <div class="error"><%= errors.file[0] %></div>
                      <% } %>
                        </div>
                        </div><br><br>
                     
                           
          
                        <button type="submit" value="submit" class="btn btn-success btn-lg mb-1">Submit</button>
          
                      </form>
          
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section> <br><br><br><br><br><br>


        
        









